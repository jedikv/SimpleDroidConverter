        android:layout_margin="16dp"
        android:src="@drawable/ic_action_content_add"
        app:fab_colorNormal="@color/fab_primary"
        app:fab_colorPressed="@color/fab_primary_pressed"
        app:fab_colorRipple="@color/fab_ripple" />
        -->
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_action_content_add"
        app:layout_anchor="@id/coordinatorLayout"
        app:elevation="6dp"
        app:backgroundTint="@color/colorPrimary"
        app:borderWidth="0dp"
        app:layout_behavior="com.jedikv.simpleconverter.ui.ScrollAwareFABBehavior"
        app:pressedTranslationZ="12dp"
        app:layout_anchorGravity="bottom|end" />

</android.support.design.widget.CoordinatorLayout>
